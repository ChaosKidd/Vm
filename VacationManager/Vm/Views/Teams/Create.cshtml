@model Vm.Models.Team
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Create Team</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ProjectId">Project</label>
        <select asp-for="ProjectId" asp-items="ViewBag.Projects" class="form-control"></select>
    </div>

    <div class="form-group">
        <label for="TeamLeadId">Team Lead</label>
        <select asp-for="TeamLeadId" asp-items="ViewBag.TeamLeads" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
