@model IEnumerable<Vm.Models.Team>

<h2>Team List</h2>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control"
                       name="searchString"
                       value="@ViewData["CurrentFilter"]"
                       placeholder="Search by team or project name">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Project</th>
            <th>Team Lead</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Project.Name</td>
                <td>@team.TeamLead.UserName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@team.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Team</a>
