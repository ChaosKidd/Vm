@model IEnumerable<Vm.Models.Team>

<h2>Team List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>Project</th>
            <th>Team Lead</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.Project.Name</td>
                <td>@team.TeamLead.UserName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = team.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = team.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Team</a>
